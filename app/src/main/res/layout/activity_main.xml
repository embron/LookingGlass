<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    ##posts the QR value in a text box for the user

    ## Scanner button

    ## History tab button

    <TextView
        android:id="@+id/QRRES"
        android:layout_width="242dp"
        android:layout_height="65dp"
        android:rotation="0"
        android:rotationY="0"
        android:text="@string/qr_code_results_go_here"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    ##Exhibit browser tab (?) button

    ## literally just the title needs to be fancier later, or not doesn't matter towards the end
    goal really

    <Button
        android:id="@+id/button"
        android:layout_width="178dp"
        android:layout_height="92dp"
        android:layout_marginTop="364dp"
        android:onClick="Scanbutton"
        android:text="Scan Codes"
        android:textSize="20sp"
        android:theme="@style/Button.Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Histbutton"
        android:layout_width="142dp"
        android:layout_height="47dp"
        android:layout_marginTop="472dp"
        android:text="History"
        android:theme="@style/Button.Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Exhibbutton"
        android:layout_width="142dp"
        android:layout_height="58dp"
        android:layout_marginTop="536dp"
        android:text="@string/exhibit_browser"
        android:theme="@style/Button.Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="338dp"
        android:layout_height="75dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="@string/looking_glass"
        android:textSize="38sp"
        android:theme="@style/Text.Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>